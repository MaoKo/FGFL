$EXTERN
{
    'fgfx.lex.h',
};

$PRODUCTION
{
    <regex>         ->  [ '^' ] [ <regex_look> ]  [ '$' ] ;

    <regex_look>    ->  <regex_union> [ '/' <regex_union> ] ;
	
    <regex_union>   ->  <regex_cat>
                            { '|' <regex_cat> } => ( $RIGHT ) ;
    <regex_cat>     ->  <regex_closure>
                            { <regex_closure> } => ( $RIGHT ) ;
    <regex_closure> ->  <regex_atom>
                            { '*' | '+' | '?' | <finite_seq> } => ( $RIGHT ) ;

    <finite_seq>    ->  '{' DIGIT [ ',' [ DIGIT ] ] '}' ;

    <regex_atom>    ->  <fullccl>
					|   <string>
					|   '(' <regex_union> ')'
					|   '.'
					|   BOUND_NAME
					|   <regex_char>
                    ;

    <fullccl>       ->  <loneccl> { <kind_fullccl> <loneccl> } => ( $RIGHT ) ;
    <kind_fullccl>  ->  DIFF_CLASS | UNION_CLASS ;

    <loneccl>       ->  '[' [ '^' ] <ccl> ']' ;
    <ccl>           ->  { <regex_char> [ '-' <regex_char> ] } => ( $RIGHT ) ;

    <string>        ->  '\"' { <regex_char> } => ( $RIGHT ) '\"' ;

    <regex_char>    ->  CHAR | OCT_NUM | HEX_NUM ;
};

$ALIAS
{
    (REG_LOOK   =>  '/')    ,
    (REG_UNION  =>  '|')    ,
    (REG_STAR   =>  '*')    ,
    (REG_PLUS   =>  '+')    ,
    (REG_QUES   =>  '?')    ,
    (REG_LBRACK =>  '[')    ,
    (REG_RBRACK =>  ']')    ,
    (REG_LBRACE =>  '{')    ,
    (REG_RBRACE =>  '}')    ,
    (REG_CARET  =>  '^')    ,
    (REG_DOLLAR =>  '$')    ,
    (REG_LPAREN =>  '(')    ,
    (REG_RPAREN =>  ')')    ,
    (REG_HYPHEN =>  '-')    ,
    (REG_COMMA  =>  ',')    ,
    (REG_DOT    =>  '.')    ,
    (REG_QUOTE  =>  '\"')   ,
};
