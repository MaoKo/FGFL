<FGFP>		->	<FGFP> <Prod> | <Prod> ;
<Prod>		->	NON_TER ARROW <Lhs> SEMI ;
<Rhs>		->	<Rhs> UNION <OptList> | <OptList> ;
<OptList>	->	<List> | /* epsilon */ ;
<List>		->	<List> <Atom> | <Atom> ;
<Atom>		->	NON_TER | TOKEN ;

/* Equivalent LL(1) */

