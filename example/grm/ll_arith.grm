$EXTERN
{
	'arith.lex.h',
};

$PRODUCTION
{
	<E>	->	<T> <E'> ;

	<E'>	->	'+' <T> <E'>
		 |	'-' <T> <E'>
		 |	%empty%
		 ;

	<T>	->	<F> <T'> ;
	<T'>	->	'*' <F> <T'>
		 |	'/' <F> <T'>
		 |	%empty%
		 ;

	<F>	->	'(' <E> ')'
		 |	ID ;

	<E> = $START;
};

$ALIAS
{
	(PLUS	=>	'+'),
	(MINUS	=>	'-'),
	(MUL	=>	'*'),
	(DIV	=>	'/'),
	(LPAREN	=>	'('),
	(RPAREN	=>	')'),
};
