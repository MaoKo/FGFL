$EXTERN
{
	'ambigous.lex.h',
};

$PRODUCTION
{
	<E>	->	<E> '+' <E>
		 |	<E> '-' <E>
		 |	<E> '*' <E>
		 |	<E> '/' <E>
		 |	PLUS  <E>	( $MIMIC UNARY )
		 |	MINUS <E>	( $MIMIC UNARY )
		 |	ID
		 ;
};

$PRECEDENCE
{
	$LEFT	( '+', '-' )	,
	$LEFT	( '*', '/' )	,
	$LEFT	( UNARY )		,
};


$ALIAS
{
	(PLUS	=>	'+'), (MINUS	=>	'-'),
	(MUL	=>	'*'), (DIV		=>	'/'),
};
