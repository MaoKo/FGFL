$EXTERN
{
	'ambigous.lex.h',
};


$PRECEDENCE
{
	$LEFT	(PLUS, MINUS)	,
	$LEFT	(MUL, DIV)		,
	$LEFT	(UNARY)			,
};


$PRODUCTION
{
	<E>	->	<E> '+' <E>
		 |	<E> '-' <E>
		 |	<E> '*' <E>
		 |	<E> '/' <E>
		 |	PLUS  <E>	( $MIMIC UNARY )
		 |	MINUS <E>	( $MIMIC UNARY )
		 |	ID
		 ;
};

$ALIAS
{
	(PLUS	=>	'+'),
	(MINUS	=>	'-'),
	(MUL	=>	'*'),
	(DIV	=>	'/'),
};
